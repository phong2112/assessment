{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@modules/*": ["src/modules/*"], // Alias cho thư mục modules
      "@services/*": ["src/services/*"], // Alias cho thư mục services
      "@utils/*": ["src/utils/*"], // Alias cho thư mục utils
      "@controllers/*": ["src/controllers/*"], // Alias cho thư mục utils
      "@models/*": ["src/models/*"], // Alias cho thư mục utils
      "@entities/*": ["src/entities/*"] // Alias cho thư mục utils
    }
  }
}
